doctype html
html
  include head.pug
  body
    header.rounded
      if user
        style.
          header {
            background: ##{user.headerBg};
            color: ##{user.avatarBorder};
            padding: .5em 1em;
          }

          header .links {
            color: ##{user.avatarBorder};
          }

          header .links a {
              color: inherit;
          }

          header .username {
            font-weight: bold;
          }

          header .avatar {
            margin-right: 1em;
            border: 2.5px solid ##{user.avatarBorder};
          }

          body {
            color: ##{user.textColor};
          }

          h1, a, .btn {
            color: ##{user.linkColor};
          }
          .btn {
            border-color: ##{user.linkColor};
          }
          .btn:hover {
            background: ##{user.linkColor};
          }

        image(src=user.avatar class='avatar rounded' width='48' height='48')
        span hi, 
        span.username  #{user.screenName}
        span.links
          a(href='/about') What is this?
          a(href='/translations') Recent translations
          a(href='/logout' class='logout') Logout
        input(type='hidden' id='uid' value=user.id)
        input(type='hidden' id='screenName' value=user.screenName)

      else
        span.links
          a(href='/about') What is this?
          a(href='/translations') Recent translations
          a(href='/login') Login with Twitter

    main
      h1 Help Translate @taravancil's Tweets
      div!= content

    if scripts
      each script in scripts
        script(src=script)
